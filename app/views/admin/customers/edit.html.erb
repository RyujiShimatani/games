<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2><%= @customer.nick_name %>さんの会員情報編集</h2>
    </div>
  </div>
  <%= form_with model: @customer, url: admin_customer_path, method: :patch, local: true do |f| %>
  <div class="row">
    <div class="col-sm-6 px-sm-0 offset-sm-1">
    <table class="table table-bordered">
       <tr>
         <th class="table-active">会員ID</th>
         <td><%= @customer.id %></td>
       </tr>
    <tr>
      <th class="table-active"><%= f.label "氏名" %></th>
      <td><%= f.text_field :nick_name %></td>
    </tr>


      <tr>
        <th class="table-active"><%= f.label "メールアドレス" %></th>
        <td><%= f.text_field :email %></td>
      </tr>
      <tr>
        <th class="table-active"><%= f.label "会員ステータス" %></th>
        <td><%= f.select :is_deleted, [['有効', false], ['退会済み', true]], {}, { class: 'form-control' } %></td>
      </tr>
    </table>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-lg-6 px-sm-0 offset-sm-1">
      <%= f.submit '変更を保存' %>
    </div>
  </div>
  <% end %>
</div>
