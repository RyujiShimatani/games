<main class="main-content">
  <h3>ジャンル編集</h3>

  <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
    <div class="row mb-3">
      <div class="col-md-2">
        <%= f.label :name, class: "form-label" %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= f.submit "変更を保存", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</main>
