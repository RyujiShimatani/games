<main class="main-content">
  <h3>ジャンル一覧・追加</h3>
  <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    <div class="row mb-3">
      <div class="col-md-2">
        <%= f.label :name, class: "form-label" %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= f.submit '新規登録', class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <h4>ジャンル一覧</h4>
  <table class="table">
    <thead>
      <tr>
        <th>ジャンル</th>
        <th>アクション</th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td>
            <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm" %>
            <%= link_to "削除", admin_genre_path(genre.id), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</main>
