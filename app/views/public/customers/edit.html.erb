<div class="container">
  <h2>会員情報編集</h2>
    <%= form_with model: @customer, url: customer_path, method: :patch do |f| %>
    <div class="row">
          <div class="col-2 offset-md-1"><%= f.label "ニックネーム" %></div>
          <div class="col-1"><%= f.text_field :nick_name, :size => "10", placeholder: "令和" %></div>
        </div>
        <div class="row">
        <div class="col-2 offset-md-1"></div>
        <div class="col-3">
          <%= f.submit '編集内容を保存', class:"btn btn-success" %>
        </div>
    <% end %>
 </div>