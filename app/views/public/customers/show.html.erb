<div class='container pt-5'>
    <div class='row'>
        <div class='col-md-6'>
          <h2>マイページ</h2>
            <h5><strong>登録情報　　</strong><%= link_to "編集する", edit_customer_path, class:"btn btn-success" %></h5>

            <table class='table table-bordered mt-3'>
              <tr>
                <td class='table-active'>ニックネーム</td>
                <td><%= @customer.nick_name %> </td>
              </tr>
              <tr>
                <td class='table-active'>好きなゲーム</td>
                <td><%= @customer.favorite_game %> </td>
              </tr>
              <tr>
                <td class='table-active'>自己紹介</td>
                <td><%= @customer.introduction %> </td>
              </tr>
              <tr>
                <td class='table-active'>性別</td>
                <td><%= @customer.sex %> </td>
              </tr>
              <tr>
                <td class='table-active'>メールアドレス</td>
                <td><%= @customer.email %></td>
              </tr>
            </table>
            <%= link_to "退会する", customers_withdraw_path, method: :patch, :class => "btn btn-danger ms-3", data: { confirm: "本当に退会しますか？" }  %>
        </div>
    </div>
</div>