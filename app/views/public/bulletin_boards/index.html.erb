<div class="container">
  <div class="row">
    <h2>掲示板</h2>

      <table class="table">
        <thead>
        <tr>
          <th>会員ID</th>
          <th>ニックネーム</th>
          <th>タイトル</th>
          <th>内容</th>
        </tr>
      </thead>
        <% @bulletin_boards.each do |bulletin_board| %>
          <tr>
            <td><%= bulletin_board.customer_id %></td>
            <td><%= Customer.find(bulletin_board.customer_id).nick_name %></td>
            <td><%= link_to bulletin_board.title, bulletin_board_path(bulletin_board) %></td>
            <td><%= bulletin_board.message %></td>
            <td><%= render "public/favorites/btn", bulletin_board: @bulletin_board %></td>
            <td><% if bulletin_board.customer == current_customer %>
              <%= link_to "削除", bulletin_board_path(bulletin_board), method: :delete %>
            <% end %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>