<main class="main-content">
<div class="container">
  <div class="row">
    <h2>掲示板</h2>

      <table class="table">
        <thead>
        <tr>
          <th>会員ID</th>
          <th>ニックネーム</th>
          <th>タイトル</th>
          <th>内容</th>
        </tr>
        <%= link_to 'いいねした投稿一覧', favorited_bulletin_boards_path %>
      </thead>
        <% @bulletin_boards.each do |bulletin_board| %>
          <tr>
            <td><%= bulletin_board.customer_id %></td>
            <td><%= link_to bulletin_board.customer.nick_name, customer_path(bulletin_board.customer) %></td>
            <td><%= link_to bulletin_board.title, bulletin_board_path(bulletin_board) %></td>
            <td><%= bulletin_board.message %></td>
            <td id="favorite_btn_<%= bulletin_board.id %>">
              <%= render "public/favorites/btn", bulletin_board: bulletin_board %>
            </td>
            <td><% if bulletin_board.customer == current_customer %>
              <%= link_to "削除", bulletin_board_path(bulletin_board), method: :delete %>
            <% end %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</main>