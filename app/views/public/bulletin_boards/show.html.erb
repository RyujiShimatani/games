<%= @bulletin_board.title %>
<%= @bulletin_board.message %>


<div>
  <p>コメント件数：<%= @bulletin_board.comments.count %></p>
  <% @bulletin_board.comments.each do |comment| %>
    <%= comment.customer.nick_name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
  <% end %>
</div>
<div>
  <%= form_with model: [@bulletin_board, @comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>
<% if @bulletin_board.favorited_by?(current_customer) %>
    <p>
      <%= link_to bulletin_board_favorites_path(@bulletin_board), method: :delete do %>
        ♥<%= @bulletin_board.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to bulletin_board_favorites_path(@bulletin_board), method: :post do %>
        ♡<%= @bulletin_board.favorites.count %> いいね
      <% end %>
    </p>
<% end %>